<h1 align="center"> Welcome to <%= @user.username.capitalize %>'s Page</h1><hr>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 150 %>
    </div>
</div>

<h4 align="center"><%= @user.username.capitalize %>'s Articles</h4>
<div class="center">
<%= link_to "Create New Article", new_article_path, class: "btn btn-sm btn-primary" %>
</div><br>
<div class="center">
    <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles.order(created_at: :desc) %>
<div class="center">
    <%= will_paginate @user_articles %>
</div>
